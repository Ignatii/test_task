class String

  def palindrome?
    return nil if string.nil?
    self.gsub!(/[\,\.\?\!\:\;\-\s']/, "")
    return false if string.length == 0
    self.downcase!
    self == self.reverse
  end

end



module Enumerable
  def palindrome?
    self == self.reverse
  end
end

puts "A man, a plan, a canal -- Panama".palindrome?
puts [1,2,3,2,1].palindrome? 
