def count_words(string)
  return "String is nil" if string.nil?
  string.gsub!(/[\,\.\?\!\:\;\-\/\\\[\]\{\}\|\*\$\%\^\#\@']/, "")
  return "String consist of only symbols or empty!" if string.length == 0
  words = string.split(" ")
  @frequency = Hash.new(0)

  words.each{
  |item|
  @frequency[item.downcase] += 1
  }
  @frequency
end

puts count_words("A man, a plan, a canal -- Panama")
