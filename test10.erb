class CartesianProduct
  include Enumerable
  attr_accessor :seq_1,:seq_2

  def initialize(seq_1,seq_2)
    @seq_1 = seq_1
    @seq_2 = seq_2
  end

  def each
    if block_given?
      @seq_1.each do
        |seq_1_1|
        @seq_2.each do
          |seq_2_2|
          element = [seq_1_1,seq_2_2]
          yield element
        end
      end
    else
      puts "Block are missing!"
    end
  end

end

